---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
}

const { title, description, pubDate, url } = Astro.props;
---
<a href={url} class="block p-6 bg-white border border-slate-200 rounded-lg shadow hover:bg-slate-50 transition-colors duration-200">
  <h3 class="mb-2 text-2xl font-bold tracking-tight text-slate-900">{title}</h3>
  <p class="font-normal text-slate-600 mb-3">{description}</p>
  <div class="text-sm text-slate-500">
    <time datetime={pubDate.toISOString()}>
      {new Intl.DateTimeFormat('en-US', { dateStyle: 'long' }).format(pubDate)}
    </time>
  </div>
</a> 