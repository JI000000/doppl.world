---
import MainLayout from "../layouts/MainLayout.astro";
---
<MainLayout title="Subscribe to doppl.world" description="Join our community to get the latest Doppl tips, guides, and availability updates delivered right to your inbox.">
  <div class="container mx-auto px-6 py-12 md:py-20">
    <div class="max-w-2xl mx-auto w-full">
      <h1 class="text-4xl font-bold text-center mb-4">Subscribe to Our Newsletter</h1>
      <p class="text-slate-500 dark:text-slate-400 text-lg text-center mb-8">
        Stay ahead with the latest news, guides, and inspiration for Google's Doppl app.
      </p>
      <div class="tally-embed-container">
        <iframe
          data-tally-src="https://tally.so/embed/mJrVyo?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="320"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          title="Stay Ahead with doppl.world">
        </iframe>
      </div>
    </div>
  </div>
</MainLayout> 