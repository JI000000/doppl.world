---
import MainLayout from '../layouts/MainLayout.astro';

const outfits = [
  { 
    id: 1, 
    title: 'Parisian Trench Coat', 
    imageUrl: 'https://images.pexels.com/photos/3758857/pexels-photo-3758857.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Classic', 'Trench', 'Parisian'] 
  },
  { 
    id: 2, 
    title: 'Modern Business Casual', 
    imageUrl: 'https://images.pexels.com/photos/1043474/pexels-photo-1043474.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Streetwear', 'Urban', 'Modern'] 
  },
  { 
    id: 3, 
    title: 'Summer Floral Vibe', 
    imageUrl: 'https://images.pexels.com/photos/1375736/pexels-photo-1375736.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Summer', 'Floral', 'Feminine'] 
  },
  { 
    id: 4, 
    title: 'Urban Leather Jacket', 
    imageUrl: 'https://images.pexels.com/photos/1183266/pexels-photo-1183266.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Leather', 'Edgy', 'Urban'] 
  },
  { 
    id: 6, 
    title: 'Flowy Bohemian Dress', 
    imageUrl: 'https://images.pexels.com/photos/720606/pexels-photo-720606.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Boho', 'Maxi', 'Festival'] 
  },
  { 
    id: 7, 
    title: 'Chic Power Suit', 
    imageUrl: 'https://images.pexels.com/photos/3769999/pexels-photo-3769999.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Business', 'Formal', 'Power'] 
  },
  { 
    id: 10, 
    title: 'Athleisure Street Look', 
    imageUrl: 'https://images.pexels.com/photos/4066290/pexels-photo-4066290.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Athleisure', 'Sporty', 'Comfort'] 
  },
  { 
    id: 12, 
    title: 'London Street Style', 
    imageUrl: 'https://images.pexels.com/photos/1300550/pexels-photo-1300550.jpeg?auto=compress&cs=tinysrgb&w=800', 
    tags: ['Street Style', 'Plaid', 'London'] 
  },
];
---

<MainLayout
  title="Outfit Ideas Gallery"
  description="Explore a curated gallery of outfit ideas and inspiration. See how to style different looks for any occasion and get ready to create your own with Doppl."
>
  <div class="container mx-auto px-6 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Outfit Ideas & Inspiration Gallery</h1>
      <p class="text-slate-500 dark:text-slate-400 text-lg max-w-2xl mx-auto">
        A curated collection of looks to inspire your next virtual try-on. See something you like?
        Take a screenshot and bring it into Doppl!
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {outfits.map(outfit => (
        <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md overflow-hidden group">
          <div class="overflow-hidden">
            <img 
              src={outfit.imageUrl} 
              alt={outfit.title} 
              class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{outfit.title}</h3>
            <div class="flex flex-wrap gap-2">
              {outfit.tags.map(tag => (
                <span class="bg-teal-100 text-teal-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-teal-900 dark:text-teal-300">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout> 